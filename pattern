x=int(input())
x1=x
x2=x
y=1
for i in range(x):
    for j in range(x1):
        print("*",end="")
    for j in range(y):
        print(" ",end="")
    for j in range(x1):
        print("*",end="")
    y+=2
    x1-=1
    print()
y1=x
y2=x
z=x*2
for i in range(1,x+1):
    for j in range(1,i+1):
        print("*",end="")
    for j in range(0,z-1):
        print(" ",end="")
    for j in range(1,i+1):
        print("*",end="")
    z-=2
    print()
    
